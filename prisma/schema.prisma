generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id        String   @id @default(cuid())
  nik       String   @unique
  name      String
  password  String
  role      Role     @default(Karyawan)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model TargetLocation {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lng       Float
  radius    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Absence {
  id         String              @id @default(cuid())
  name       String
  nik        String
  attendance AbsenceAttendance[]
  status     AbsenceStatus
  submission AbsenceSubmission?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @default(now()) @updatedAt
}

model AbsenceAttendance {
  id           String           @id @default(cuid())
  attendanceId String
  lat          Float
  lng          Float
  distance     Int
  absence      Absence          @relation(fields: [attendanceId], references: [id], onDelete: Cascade)
  status       AttendanceStatus
  createdAt    DateTime         @default(now())
}

model AbsenceSubmission {
  id          String        @unique
  status      AbsenceStatus
  description String        @db.Text
  isApproved  Boolean       @default(false)
  startDate   DateTime
  endDate     DateTime
  absence     Absence       @relation(fields: [id], references: [id], onDelete: Cascade)
}

enum Role {
  Admin
  Karyawan
}

enum AbsenceStatus {
  Hadir
  Alpa
  Izin
  Sakit
}

enum AttendanceStatus {
  Masuk
  Keluar
}
