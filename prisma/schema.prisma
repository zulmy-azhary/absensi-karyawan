generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  userId    Int      @id @default(autoincrement())
  nik       String   @unique
  name      String
  password  String
  role      Role     @default(Karyawan)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model TargetLocation {
  id        Int      @id @default(autoincrement())
  name      String
  lat       Float
  lng       Float
  radius    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Absence {
  id           Int            @id @default(autoincrement())
  name         String
  nik          String
  absenceId    String         @unique
  absenceState AbsenceState[]
  status       AbsenceStatus
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now()) @updatedAt
}

model AbsenceState {
  id        Int           @id @default(autoincrement())
  absenceId String        
  lat       Float
  lng       Float
  status    AbsenceStatus
  distance  Int
  absence   Absence       @relation(fields: [absenceId], references: [absenceId])
  createdAt DateTime      @default(now())
}

enum Role {
  Admin
  Karyawan
}

enum AbsenceStatus {
  Masuk
  Keluar
}
